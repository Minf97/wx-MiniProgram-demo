.container {
    width: 100%;
    height: 90vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.canvas1 {
    position: relative;
    border: 1px solid;
    width: 700rpx;
    height: 600rpx;
}

.showBox {
    width: 250rpx;
    height: 250rpx;
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    background-color: rgba(0, 0, 0,0.2);
}

.colorBox {
    width: 100rpx;
    height: 100rpx;
    margin: 10rpx;
    background-color: #fff;
}

.dot{
    position: absolute;
    width: 5rpx;
    height: 5rpx;
    border: 1rpx solid #000;
    z-index: 10;
}