.container {
    width: 100%;
    height: 90vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.canvas1 {
    position: relative;
    border: 1px solid;
    width: 350px;
    height: 300px;
}

.showBox {
    width: 250rpx;
    height: 250rpx;
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    background-color: rgba(0, 0, 0,0.2);
}

.colorBox {
    width: 100rpx;
    height: 100rpx;
    margin: 10rpx;
    background-color: #fff;
}

.dot{
    position: absolute;
    top: 0;
    left: 0;
    width: 30px;
    height: 30px;
    border: 5rpx solid #fff;
    border-radius: 50%;
    z-index: 999;
}